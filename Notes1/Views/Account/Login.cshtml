@model Notes1.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Zaloguj";
}

<div class="row">
    <div class="col-8 mx-auto">
        <h1 class="mt-2">Zaloguj się</h1>
        <hr />
        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl">
            <div class="mb-3">
                <label asp-for="Username">Nazwa użytkownika</label>
                <input type="text" asp-for="Username" class="form-control">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password">Hasło</label>
                <input type="password" asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="mb-3">
                <input type="checkbox" asp-for="RememberMe">
                <label asp-for="RememberMe">Zapamiętaj mnie</label>
                <span class="text-danger" asp-validation-for="RememberMe"></span>
            </div>
            <div class="mb-3">
                <input type="submit" class="form-control btn btn-success" value="Zaloguj">
            </div>
        </form>
    </div>
</div>