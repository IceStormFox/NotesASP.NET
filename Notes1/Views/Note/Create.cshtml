@model Notes1.ViewModels.NoteViewModel

@{
    ViewData["Title"] = "Utwórz notatkę";
}


<div class="row">
    <div class="col-8 mx-auto">
        <div class="row d-flex align-items-center">
            <div class="col-10">
                <h1 class="mt-2">Stwórz notatkę</h1>
            </div>
            <div class="col-2">
                <a class="btn btn-success form-control" asp-action="Index">
                    <i class="bi bi-arrow-left-circle-fill"></i> Cofnij
                </a>
            </div>
        </div>



        <hr />
        <form asp-action="Create" asp-controller="Note" method="post">
            <div class="mb-3">
                <label asp-for="Title">Tytuł</label>
                <input type="text" asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <div class="d-flex align-items-center justify-content-center gap-3">
                    <label>Wybierz kolor tła</label>
                    <input type="color" asp-for="Color" value="#dc143c">
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="form-control btn btn-success">
                    <i class="bi bi-file-earmark-fill"></i>
                    Zapisz
                </button>
            </div>
        </form>
    </div>
</div>